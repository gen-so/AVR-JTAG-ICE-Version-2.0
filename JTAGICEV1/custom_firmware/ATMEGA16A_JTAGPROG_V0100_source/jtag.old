
#include "main.h"

#define TMS_0 			0
#define TMS_1                   1

#define TDI_0 			0
#define TDI_1 			1

#define TMS_PIN      	 	1
#define TMS_MASK      	 	0x02
#define TDI_PIN      	 	5
#define TDI_MASK      	 	0x20
#define TDO_PIN      	 	6
#define TDO_MASK      	 	0x40
#define TCLK_PIN     		7
#define TCLK_MASK     		0x80

//----------------------------------------------------------------------------------------------------------------------
//описание:описание переменных контроллера
//-----------------------------------------------------------------------------------------------------------------------
 char cJTAG_prog_mode;					//флаг режима программирования 
//-------------------------------------------------------------------------------------------------------------------------
// описание: Инициализация JTAG 
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_Init(void)
{
 #asm
 	sbi	0x17,1;                                 // TMS  =>1
 	sbi	0x17,5;                                 // TDI  =>1
	sbi	0x17,7;                                 // TCLK =>1
	cbi	0x17,6;                                 // TDO  =>0
 #endasm 
 cJTAG_prog_mode = 0;
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Формирование TAP последовательности JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_Tap(unsigned long ulState, unsigned char ucCount)
 {
  unsigned char i;
  PORTB = PORTB & ~TCLK_MASK;
  PORTB = PORTB & ~TMS_MASK;
  for(i =0; i < ucCount; i++)
   {
    if((ulState & 0x01)!= 0) PORTB = PORTB | TMS_MASK; 
    else PORTB = PORTB & ~TMS_MASK;
    ulState = ulState >> 1;
    PORTB = PORTB | TCLK_MASK;
    PORTB = PORTB & ~TCLK_MASK;
   }
 }
//-------------------------------------------------------------------------------------------------------------------------
// описание: Отправка данных в JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
unsigned long JTAG_ShiftInstruction(unsigned long ulInstruction, unsigned char ucCount)
 {
  unsigned char i;
  unsigned long ulResult;
  ulResult =0; 
  PORTB = PORTB & ~TMS_MASK;
  PORTB = PORTB & ~TCLK_MASK;
  for( i =0; i < ucCount; i++)
   {
    if((ulInstruction & 0x01) != 0) PORTB = PORTB | TDI_MASK; 
    else PORTB = PORTB & ~TDI_MASK;
    ulInstruction = ulInstruction >>1;
    if(i == (ucCount-1)) PORTB = PORTB | TMS_MASK; // последний бит JTAG инструкции: подготовим уход из Shift-IR
    PORTB = PORTB | TCLK_MASK;
    if ((PINB & TDO_MASK) != 0) ulResult = ulResult | 0x80000000;
    ulResult = ulResult >>1;
    PORTB = PORTB & ~TCLK_MASK;
   }
  return ulResult;
 }
//-------------------------------------------------------------------------------------------------------------------------
// описание: Вывод команды в JTAG интерфейс
// параметры:    нет
// возвращаемое  значение:  uiResult - ответ устройства
//-------------------------------------------------------------------------------------------------------------------------
unsigned int JTAG_WriteProgCmd(unsigned char ucCmdH, unsigned char ucCmdL)
{
 unsigned int uiResult;
 unsigned int uiCommand;
 unsigned long ulData;

 uiCommand = ucCmdH;
 uiCommand = (uiCommand << 8) | ucCmdL;

 JTAG_Tap(0x0D,6);
 JTAG_ShiftInstruction(0x05,4);

 JTAG_Tap(0x3,4);
 ulData = JTAG_ShiftInstruction(uiCommand, 15);
 uiResult = ulData >>16;
 return uiResult;
}




//-------------------------------------------------------------------------------------------------------------------------
// описание: Формирование импулсов JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
unsigned char JTAG_ClockPulse(unsigned char ucTms, unsigned char ucTdi)
{
 unsigned char ucResult;

 if(ucTms != 0)  PORTB = PORTB | TMS_MASK;
 else PORTB = PORTB & ~TMS_MASK;
 if(ucTdi != 0)  PORTB = PORTB | TDI_MASK;
 else PORTB = PORTB & ~TDI_MASK;

 PORTB = PORTB | TCLK_MASK;				//clock raising edge 

 PORTB = PORTB & ~TCLK_MASK;                            //clock falling edge

 ucResult = PINB & TDO_MASK; 
 return ucResult;
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Установка синхронизации JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_TestLogicReset(void)
{
 unsigned char i;
 for(i =0; i < 5; i++) 
  {
   JTAG_ClockPulse(TMS_1,TDI_0);
  }
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Установка синхронизации JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_ShiftIR(void)
{
 JTAG_ClockPulse(TMS_0, TDI_0);
 JTAG_ClockPulse(TMS_1, TDI_0);
 JTAG_ClockPulse(TMS_1, TDI_0);
 JTAG_ClockPulse(TMS_0, TDI_0);
 JTAG_ClockPulse(TMS_0, TDI_0);
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Установка синхронизации JTAG  (TAP)
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_WriteIR(unsigned char ucData)
{
 char i;
 unsigned char ucTms;
 unsigned char ucTdi;

 for(i =0; i < 4; i++) 
  {
   ucTms = TMS_0;
   if(i == 3) ucTms = TMS_1;
   ucTdi = ucData & 0x01;
   ucTdi = ucTdi >> 1;
   JTAG_ClockPulse(ucTms, ucTdi);
  }
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Установка синхронизации JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_ShiftDR(void)
{
 JTAG_ClockPulse(TMS_0,TDI_0);
 JTAG_ClockPulse(TMS_1,TDI_0);
 JTAG_ClockPulse(TMS_0,TDI_0);
 JTAG_ClockPulse(TMS_0,TDI_0);
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Установка синхронизации JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
unsigned char JTAG_WriteDR(unsigned char ucData, unsigned char ucCount, unsigned char cFlgLast)
{
 char i;
 unsigned char ucResult;
 unsigned char ucTms;
 unsigned char ucTdi;

 ucResult =0;

 for(i =0; i < ucCount; i++) 
  {
   ucTms = TMS_0;
   if(cFlgLast != 0)					//остаток
    {
     if(i == (ucCount - 1)) ucTms = TMS_1;              // последний бит цикла 
    }
   ucTdi = ucData & 0x01;				//отправим бит в JTAG  
   ucData = ucData >> 1;

   if(JTAG_ClockPulse(ucTms, ucTdi) != 0) ucResult = ucResult | 0x80; 
   ucResult = ucResult >> 1;
  }
 return ucResult;
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Установка синхронизации JTAG
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_RunTestIdle(void)
{
 JTAG_ClockPulse(TMS_1,TDI_0);
 JTAG_ClockPulse(TMS_0,TDI_0);
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Вывод данных в JTAG интерфейс
// параметры:    нет
// возвращаемое  значение:  ulResult - ответ устройства
//-------------------------------------------------------------------------------------------------------------------------
unsigned long JTAG_WriteData(unsigned long ulCmd, unsigned char ucLength)
{
 unsigned char ucByte;
 unsigned char ucShift;
 unsigned long ulResult;

 ucShift = 0;
 ulResult =0;

 JTAG_ShiftDR();

 while(ucLength > 0) 
  {
   ucByte = (unsigned char) (ulCmd >> ucShift); 
   if(ucLength <= 8)					//отправим остаток 
     {
      ucByte = JTAG_WriteDR(ucByte, ucLength, 1);
      ulResult = (ulResult << 8) | ucByte;
      break;
     } 
    else 
     {
      ucByte = JTAG_WriteDR(ucByte, 8, 0);
      ulResult = (ulResult << 8) | ucByte;
     }
    ucLength = ucLength - 8;
    ucShift  = ucShift + 8;    
  }
 JTAG_RunTestIdle();
 return ulResult;
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Вывод инструкции в JTAG интерфейс
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_WriteInstruction(unsigned char ucInstruction)
{
 JTAG_ShiftIR();
 JTAG_WriteIR(ucInstruction & 0x0F);
 JTAG_RunTestIdle();
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Вход в режим программирования
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_EnteringProgramming(void)
{
  JTAG_Tap(0xFFFF,16);
  JTAG_Tap(0x0000,16);

  JTAG_Tap(0x3,4);
  JTAG_ShiftInstruction(0xC,4);
  JTAG_Tap(0x3,4);
  JTAG_ShiftInstruction(0x01,1);

  JTAG_Tap(0x0D,6);
  JTAG_ShiftInstruction(0x4,4);
  JTAG_Tap(0x3,4);
  JTAG_ShiftInstruction(0xA370,16);
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Выход из режима программирования
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_LeavingProgramming(void)
{
 JTAG_WriteProgCmd(0x23, 0x00);
 JTAG_WriteProgCmd(0x33, 0x00);

 JTAG_Tap(0x0D,6);
 JTAG_ShiftInstruction(0x04,4);
 JTAG_Tap(0x3,4);
 JTAG_ShiftInstruction(0x0000,15);

 JTAG_Tap(0x0D,6);
 JTAG_ShiftInstruction(0xC,4);
 JTAG_Tap(0x3,4);
 JTAG_ShiftInstruction(0x00,1);
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Вход в режим программирования
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_EnterProgMode(void)
{
 JTAG_EnteringProgramming();
 cJTAG_prog_mode = 1;
}
//-------------------------------------------------------------------------------------------------------------------------
// описание: Выход из режима программирования
// параметры:    нет
// возвращаемое  значение:  нет
//-------------------------------------------------------------------------------------------------------------------------
void JTAG_LeaveProgMode(void)
{
